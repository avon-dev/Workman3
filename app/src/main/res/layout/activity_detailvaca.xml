<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".View.Detail_Vacation.DetailvacaActivity">

    <TextView
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:textSize="20dp"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_width="wrap_content" android:layout_height="wrap_content"
        android:text="휴가"
        app:layout_constraintBottom_toBottomOf="@+id/view" android:id="@+id/textView3"/>

    <Button
        style="?android:attr/borderlessButtonStyle"
        android:id="@+id/DV_cancel"
        android:layout_width="55dp"
        android:enabled="false"
        android:layout_height="55dp"
        android:background="@null"
        android:text="취소"
        android:textColor="@color/red"
        android:textSize="18dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageButton
        android:background="@drawable/ic_chevron_left_black_24dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_width="55dp"
        android:layout_height="55dp"/>

    <View
        android:layout_marginTop="55dp"
        android:background="@color/black"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_width="match_parent"
        android:layout_height="1dp" android:id="@+id/view"/>

    <TextView
        android:id="@+id/vacanametext"
        android:text="직원 이름"
        android:textSize="20dp"
        android:padding="10dp"
        android:gravity="start|center"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/view"
        android:layout_width="wrap_content"
        android:layout_height="60dp"/>

    <TextView
        android:id="@+id/DV_name"
        android:text="홍길동"
        android:textSize="20dp"
        android:padding="10dp"
        android:gravity="start|center"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/vacanametext"
        app:layout_constraintBottom_toBottomOf="@id/vacanametext"
        android:layout_width="wrap_content"
        android:layout_height="0dp"/>

    <View
        android:background="@color/gray3"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/vacanametext"
        android:layout_width="match_parent"
        android:layout_height="0.5dp" android:id="@+id/view1"/>

    <TextView
        android:id="@+id/vacatypetext"
        android:text="휴가 유형"
        android:textSize="20dp"
        android:padding="10dp"
        android:gravity="start|center"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/view1"
        android:layout_width="wrap_content"
        android:layout_height="60dp"/>

    <TextView
        android:id="@+id/DV_type"
        android:text="연차"
        android:textSize="20dp"
        android:padding="10dp"
        android:gravity="start|center"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/vacatypetext"
        app:layout_constraintBottom_toBottomOf="@id/vacatypetext"
        android:layout_width="wrap_content"
        android:layout_height="0dp"/>

    <View
        android:background="@color/gray3"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/vacatypetext"
        android:layout_width="match_parent"
        android:layout_height="0.5dp" android:id="@+id/view2"/>

    <TextView
        android:id="@+id/vacadatetext"
        android:layout_width="wrap_content"
        android:layout_height="60dp"
        android:gravity="start|center"
        android:padding="10dp"
        android:text="휴가 날짜"
        android:textSize="20dp"
        app:layout_constraintBottom_toBottomOf="@id/DV_date"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/DV_date" />

    <TextView
        android:minHeight="60dp"
        android:scrollbars="vertical"
        android:id="@+id/DV_date"
        android:maxLines="3"
        android:text="0000년 00월 00일 (월)"
        android:textSize="20dp"
        android:padding="10dp"
        android:gravity="start|center"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/view2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <View
        android:background="@color/gray3"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/DV_date"
        android:layout_width="match_parent"
        android:layout_height="0.5dp" android:id="@+id/view3"/>

    <TextView
        android:id="@+id/DV_startTimeText"
        android:text="시작 시간"
        android:textSize="20dp"
        android:padding="10dp"
        android:gravity="start|center"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/view3"
        android:layout_width="wrap_content"
        android:layout_height="60dp"/>

    <TextView
        android:id="@+id/DV_startTime"
        android:text="00:00 AM"
        android:textSize="20dp"
        android:padding="10dp"
        android:gravity="start|center"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/DV_startTimeText"
        app:layout_constraintBottom_toBottomOf="@id/DV_startTimeText"
        android:layout_width="wrap_content"
        android:layout_height="0dp"/>

    <View
        android:background="@color/gray3"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/DV_startTimeText"
        android:layout_width="match_parent"
        android:layout_height="0.5dp" android:id="@+id/view4"/>

    <TextView
        android:id="@+id/DV_endTimeText"
        android:text="종료 시간"
        android:textSize="20dp"
        android:padding="10dp"
        android:gravity="start|center"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/view4"
        android:layout_width="wrap_content"
        android:layout_height="60dp"/>

    <TextView
        android:id="@+id/DV_endTime"
        android:text="00:00 AM"
        android:textSize="20dp"
        android:padding="10dp"
        android:gravity="start|center"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/DV_endTimeText"
        app:layout_constraintBottom_toBottomOf="@id/DV_endTimeText"
        android:layout_width="wrap_content"
        android:layout_height="0dp"/>

    <View
        android:background="@color/gray3"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/DV_endTimeText"
        android:layout_width="match_parent"
        android:layout_height="0.5dp" android:id="@+id/view5"/>

    <TextView
        android:id="@+id/vacasigntext"
        android:text="승인 상태"
        android:textSize="20dp"
        android:padding="10dp"
        android:gravity="start|center"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/view5"
        android:layout_width="wrap_content"
        android:layout_height="60dp"/>

    <TextView
        android:id="@+id/DV_approve"
        android:textColor="@color/green"
        android:text="승인"
        android:textSize="20dp"
        android:padding="10dp"
        android:gravity="start|center"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/vacasigntext"
        app:layout_constraintBottom_toBottomOf="@id/vacasigntext"
        android:layout_width="wrap_content"
        android:layout_height="0dp"/>

    <View
        android:background="@color/gray3"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/vacasigntext"
        android:layout_width="match_parent"
        android:layout_height="0.5dp" android:id="@+id/view6"/>

    <TextView
        android:id="@+id/DV_approveManagerText"
        android:text="승인 관리자"
        android:textSize="20dp"
        android:padding="10dp"
        android:gravity="start|center"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/view6"
        android:layout_width="wrap_content"
        android:layout_height="60dp"/>

    <TextView
        android:id="@+id/DV_approveManager"
        android:text="홍판서"
        android:textSize="20dp"
        android:padding="10dp"
        android:gravity="start|center"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/DV_approveManagerText"
        app:layout_constraintBottom_toBottomOf="@id/DV_approveManagerText"
        android:layout_width="wrap_content"
        android:layout_height="0dp"/>

    <View
        android:background="@color/gray3"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/DV_approveManagerText"
        android:layout_width="match_parent"
        android:layout_height="0.5dp" android:id="@+id/view7"/>

    <TextView
        android:id="@+id/DV_approveTimeText"
        android:text="승인 날짜"
        android:textSize="20dp"
        android:padding="10dp"
        android:gravity="start|center"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/view7"
        android:layout_width="wrap_content"
        android:layout_height="60dp"/>

    <TextView
        android:id="@+id/DV_approveTime"
        android:text="0000년 00월 00일 (월) PM 8:30"
        android:textSize="20dp"
        android:padding="10dp"
        android:gravity="start|center"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/DV_approveTimeText"
        app:layout_constraintBottom_toBottomOf="@id/DV_approveTimeText"
        android:layout_width="wrap_content"
        android:layout_height="0dp"/>

    <View
        android:background="@color/gray3"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/DV_approveTimeText"
        android:layout_width="match_parent"
        android:layout_height="0.5dp" android:id="@+id/view8"/>

    <TextView
        android:id="@+id/vacareasontext"
        android:text="휴가 사유"
        android:textSize="20dp"
        android:padding="10dp"
        android:gravity="start|center"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/view8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/DV_reason"
        android:hint="휴가 사유입니다."
        android:textSize="15dp"
        android:paddingHorizontal="10dp"
        android:scrollbars="vertical"
        app:layout_constraintTop_toBottomOf="@id/vacareasontext"
        android:layout_width="match_parent"
        android:layout_height="130dp"/>

    <View
        android:background="@color/gray3"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/DV_reason"
        android:layout_width="match_parent"
        android:layout_height="0.5dp" android:id="@+id/view9"/>

    <ProgressBar
        android:visibility="invisible"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:theme="@style/Widget.AppCompat.ProgressBar"
        style="@style/Widget.AppCompat.ProgressBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/DV_progressBar"/>
</androidx.constraintlayout.widget.ConstraintLayout>